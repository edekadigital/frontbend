{
  "name": "frontbend",
  "description": "Frontbend is a tool that automates the analysis of image dimensions accross various breakpoints.",
  "keywords": [
    "Responsive",
    "Images",
    "Srcset",
    "Sizes",
    "Akamai",
    "Image",
    "Manager"
  ],
  "author": "EDEKA DIGITAL GmbH",
  "license": "MIT",
  "version": "0.2.2",
  "repository": {
    "type": "git",
    "url": "https://github.com/edekadigital/frontbend"
  },
  "homepage": "https://github.com/edekadigital/frontbend#readme",
  "bugs": {
    "url": "https://github.com/edekadigital/frontbend/issues"
  },
  "engines": {
    "node": ">=8.14.0"
  },
  "main": "./lib/index.js",
  "bin": {
    "frontbend": "./lib/cli.js"
  },
  "files": [
    "lib"
  ],
  "scripts": {
    "clean": "rimraf lib",
    "build": "tsc",
    "prebuild": "npm run clean",
    "test": "jest --verbose",
    "test:ci": "jest --verbose --ci --detectOpenHandles --maxWorkers=2",
    "lint": "tslint --project tsconfig.lint.json --fix",
    "format": "prettier \"**/*.{ts,ts,js,json,css,md}\" --write",
    "prepublishOnly": "npm run test:ci && npm run build"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm test && lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,json,css,md}": [
      "prettier --write",
      "git add"
    ],
    "*.{ts}": [
      "tslint --fix",
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@types/chalk": "^2.2.0",
    "@types/jest": "^23.3.11",
    "@types/joi": "^14.0.1",
    "@types/listr": "^0.13.0",
    "@types/lodash": "^4.14.119",
    "@types/mkdirp": "^0.5.2",
    "@types/node": "^10.12.15",
    "@types/puppeteer": "^1.11.1",
    "@types/rimraf": "^2.0.2",
    "@types/yargs": "^12.0.1",
    "husky": "^1.3.0",
    "jest": "^24.8.0",
    "lint-staged": "^8.1.0",
    "prettier": "^1.15.3",
    "ts-jest": "^23.10.5",
    "tslint": "^5.12.0",
    "tslint-config-prettier": "^1.17.0",
    "typescript": "^3.2.2"
  },
  "dependencies": {
    "chalk": "^2.4.1",
    "joi": "^14.3.1",
    "listr": "^0.14.3",
    "lodash": "^4.17.11",
    "mkdirp": "^0.5.1",
    "puppeteer": "^1.18.0",
    "rimraf": "^2.6.3",
    "yargs": "^12.0.5"
  }
}
